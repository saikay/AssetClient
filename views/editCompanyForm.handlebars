<form action="/editCompany" method="post">
    <div class="form-group">
        <input type="text" class="form-control" name="_id" value="{{_id}}" hidden="true">
        <label for="company">Company Name</label>
        <input type="text" class="form-control" name="company" value="{{company}}"  style="width: 40rem;">
        <label for="note">Note</label>
        <textarea type="text" class="form-control" name="note" id="note" rows="30">{{note}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/">Cancel</a>
    <script>
        var simplemde = new SimpleMDE({element: document.getElementById("note")});
    </script>
</form>